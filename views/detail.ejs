<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            
            <div class="card">
                <div class="card-header">
                <h2>Detail Kontak</h2>
                <% if (!contact) { %>
                </div>
                <div class="card-body">
                  <p class="card-text alert alert-danger">Nama Tidak Ditemukan!</p>
                  <a href="/contact" class="btn btn-primary">kembali</a>
                </div>
              </div>
                <% } else { %>
                </div>
                <div class="card-body">
                  <p class="card-text">Nama : <%= contact.nama %></p>
                  <p class="card-text">No HP : <%= contact.noHP %></p>
                  <p class="card-text">Email : <%= contact.email %></p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-success badge" >Ubah</a>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Hapus Kontak?')">Hapus</a>
                  <a href="/contact" class="btn btn-primary d-block mt-3">kembali</a>
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>